algoritmo "Idade"
var
   ano_n, ano_a, idade:real
   Nome: caractere
inicio
      Escreva("Digite o seu primeiro nome: ")
      Leia(Nome)
      Escreva("Dige o ano em que você nasceu: ")
      Leia(ano_n)
      Escreva("Digite o ano atual: ")
      Leia(ano_a)
      idade <- ano_a - ano_n
      Escreva("Olá ", N,", você tem ", idade," anos de idade")
fimalgoritmo